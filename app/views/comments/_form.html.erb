<div class="container my-2 py-2 text-body">
  <div class="row d-flex">
    <div class="card">
      <div class="card-body p-4">
        <h5>
          <%= t("comments.add_comment") %>
        </h5>
        <%= form_with(model: [@story, @comment], local: true) do |form| %>
            <% if @comment.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <div id="error_explanation">
                  <h2>
                    <%= pluralize(@comment.errors.count, t("comments.form.error")) %> <%= t("comments.form.error") %>:
                  </h2>
                  <ul>
                    <% @comment.errors.each do |error| %>
                      <li><%= error.full_message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            <% end %>
            <div class="w-100">
              <div data-mdb-input-init class="form-outline">
                <%= form.label :body, t('comments.your_message'), class: 'form-label', for: 'textAreaExample' %>
                <%= form.text_area :body, class: 'form-control', id: 'textAreaExample', rows: '4' %>
              </div>
              <div class="d-flex justify-content-between mt-3">
                <%= form.submit t("comments.form.create_comment"), class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>